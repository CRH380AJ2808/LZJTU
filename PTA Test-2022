
//作业一 两整数的加法
#include<stdio.h>
int main( )
{
	int x,y,sum;
	scanf("%d%d",&x,&y);
	sum=x+y;
	printf("%d",sum);
	return 0;
}


//第三章测试题
//输入输出字符 
#include <stdio.h>
int main()
{
	char a;
	scanf("%c", &a);
	printf("%c,%d\n", a,a);
	return 0;
}

//大小写转换 
# include <stdio.h>
int main()
{
	char a;
	scanf("%c", &a);
	if (a < 91)
	{
		a =a+ 32;
		printf("%c\n", a);

	}
	else
	{
		a =a- 32;
		printf("%c\n", a);
	}
	return 0;
}


//混合类型数据格式化输入 
//顺序读入浮点数1、整数、字符、浮点数2，再按照字符、整数、浮点数1、浮点数2的顺序输出。
# include <stdio.h>
int main(void) {
    float f1, f2;
    int i;
    char c;
    scanf("%f %d %c %f", &f1, &i, &c, &f2);
    printf("%c %d %.2f %.2f", c, i, f1, f2);
    
    return 0;
}







